model Categories {
  id         String             @id @default(uuid())
  name       String
  created_at DateTime?          @default(now())
  news       News[]
}

model News {
  id           String    @id @default(uuid())
  title        String
  content      String
  created_date DateTime? @default(now())

  author    Users  @relation(fields: [author_id], references: [id])
  author_id String

  categories Categories[]
}
